{
  "name": "blockchain-ts",
  "version": "0.0.2",
  "private": false,
  "scripts": {
    "build": "tsc",
    "start": "tsc && node ./build/main.js",
    "dev:debug": "ts-node-dev --inspect=4321 --respawn --transpile-only ./src/main.ts",
    "test": "jest --coverage --forceExit",
    "test:watch": "jest --coverage --watchAll",
    "test:open": "jest --coverage --detectOpenHandles",
    "clean": "rm -rf coverage build",
    "lint": "tsc && eslint \"**/*.{js,ts}\" --fix"
  },
  "dependencies": {
    "@types/cookie-parser": "1.4.2",
    "axios": "^0.21.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "js-sha256": "^0.9.0",
    "morgan": "~1.9.1",
    "supertest": "6.1.3",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@babel/runtime": "7.13.4",
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.10",
    "@types/debug": "4.1.5",
    "@types/es6-promise": "3.3.0",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.21",
    "@types/supertest": "2.0.11",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "axios-mock-adapter": "1.19.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "jest": "27.0.3",
    "jest-mock": "27.0.3",
    "prettier": "2.0.5",
    "ts-jest": "27.0.2",
    "ts-mockito": "2.6.1",
    "ts-node-dev": "1.0.0-pre.56",
    "tslint": "6.1.2",
    "typescript": "4.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
